<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F7FF"
    android:orientation="vertical"
    android:padding="13dp"
    tools:context=".About">

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:text="About Us"
        android:textAlignment="center"
        android:textColorLink="#212B32"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginBottom="10sp"
        android:src="@drawable/armageddon" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="30dp"
        android:background="#212B32"
        android:backgroundTint="#212B32">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="Selamat datang! Solusi cepat dan praktis untuk menghitung luas segitiga dengan mudah! Aplikasi ini dirancang untuk mempermudah Anda dalam menyelesaikan perhitungan geometris, baik untuk keperluan belajar, pekerjaan, maupun sekadar mengecek hasil perhitungan. Dengan antarmuka yang sederhana, mudah digunakan oleh siapa saja, aplikasi ini memberikan hasil perhitungan yang akurat hanya dengan memasukkan data panjang alas dan tinggi, sehingga membuat prosesnya menjadi lebih efisien."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>